@import url('https://fonts.googleapis.com/css2?family=Merriweather:wght@700&family=Roboto:wght@400;700&display=swap');

/* Overall body styling for background and font */
body {
    font-size: 16px;
    font-family: 'Roboto', sans-serif;
    background-color: #f4f4f4; /* Soft gray background */
    margin: 0;
    padding: 0;
    line-height: 1.6;
    color: #333; /* Darker text for better readability */
}

/* Header styling with contrast and shadow for depth */
h1 {
    text-decoration: underline;
    text-decoration-color: #28527a; /* Deep blue for emphasis */
    text-align: center;
    font-size: 2.5em;
    font-family: 'Merriweather', serif;
    background-color: #e7e7e7; /* Light gray background */
    color: #28527a; /* Text color matches underline */
    padding: 20px 0;
    box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.2); /* Subtle shadow for depth */
}

/* Table styling with shadow and contrast */
table {
    width: 100%;
    border-collapse: collapse;
    background-color: #ffffff; /* White background for contrast */
    color: #333333; /* Dark text for readability */
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* Stronger shadow for more depth */
    margin-bottom: 20px;
}

table th,
table td {
    padding: 15px; /* Increased padding for a better table layout */
    border: 1px solid #dddddd; /* Light border for subtle separation */
    background-color: #f9f9f9; /* Slightly off-white background for headers/cells */
}

/* Form styling with improved shadow and contrast */
form {
    box-sizing: border-box;
    width: 60%;
    margin: 20px auto;
    padding: 20px;
    background-color: #fefefe; /* Bright background for the form area */
    border: 2px solid #e7e7e7; /* Light border for soft edge */
    border-radius: 10px; /* Rounded corners for a modern feel */
    box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15); /* Larger shadow for more prominent depth */
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 20px; /* Increased gap for better visual separation */
}

/* Enhancing the #snow element if needed */
#snow {
    position: fixed;
    top: 0;
    left: 0;
    z-index: 9999;
    pointer-events: none;
}
/* Media queries for responsive design */
@media only screen and (max-width: 1200px) {
    /* Adjustments for smaller desktops */
    h1 {
        font-size: 2em; /* Slightly smaller font size */
    }

    form {
        width: 80%; /* More width for form in smaller spaces */
    }

    table {
        box-shadow: 0 2px 3px rgba(0, 0, 0, 0.1); /* Less pronounced shadow */
    }
}

@media only screen and (max-width: 992px) {
    /* Adjustments for tablets */
    body {
        font-size: 14px; /* Smaller font size for body */
    }

    h1 {
        font-size: 1.8em; /* Adjust h1 size for tablet screens */
    }

    form {
        width: 90%; /* Increase form width to take more space */
        grid-template-columns: 1fr; /* Stack inputs vertically */
        gap: 15px;
    }

    table th,
    table td {
        padding: 8px; /* Less padding in table cells */
    }
}

@media only screen and (max-width: 768px) {
    /* Adjustments for smaller tablets and large phones */
    h1 {
        font-size: 1.6em;
    }

    form {
        width: 95%; /* Form takes almost full width */
    }
}

@media only screen and (max-width: 576px) {
    /* Adjustments for small phones */
    body {
        font-size: 13px; /* Even smaller font size for readability */
    }

    h1 {
        font-size: 1.5em; /* Small screen header size */
        padding: 15px 0; /* Less padding on the top and bottom */
    }

    form {
        width: 100%; /* Form should fill the screen entirely */
        padding: 15px; /* Less padding in the form */
    }

    table {
        box-shadow: none; /* Remove shadow to fit better on small screens */
    }
}
